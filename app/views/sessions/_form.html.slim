- if @form.errors.any?
  .alert.alert-error.alert-danger
    button.close type="button" data-dismiss="alert" &times;
    ul
      - @form.errors.full_messages.each do |message|
        li
          = message

.form-horizontal role="form"
  = form_with(model: @form, url: users_log_in_path, local: true) do |f|
    .form-group
      = f.label :email, "メールアドレス", class: "col-sm-3 control-label"
      .col-sm-5
        = f.email_field :email, class: "form-control", required: true, placeholder: "xxx@sample.com", autocomplete: "email"

    .form-group
      = f.label :password, "パスワード", class: "col-sm-3 control-label"
      .col-sm-3
        = f.password_field :password, class: "form-control", required: true, placeholder: "xxxxxx", autocomplete: "current-password"

    .form-group
      .col-sm-offset-3.col-sm-3
        = f.submit "ログイン", class: "btn btn-primary"
